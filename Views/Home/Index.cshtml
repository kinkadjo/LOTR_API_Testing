@{
    ViewData["Title"] = "Home Page";
}

@using LOTR_API_Testing.Models

@model ViewModel

<h1>LOTR API Testing Application</h1>
<hr/>
@using (Html.BeginForm("GetQuote", "Home", FormMethod.Get))
{
    <div class="row">
        <div class="col-3">
            @Html.LabelFor(model => model.CharacterDD, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.CharacterID, Model.CharacterDD, "", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="col-3 d-flex">
            <button class="btn btn-primary mt-auto" type="submit">Get Quote!</button>
        </div>
    </div>
}
<br/>
@using (Html.BeginForm("GetRandom", "Home", FormMethod.Get))
{
    <div class="row">
        <p>Disclaimer! There's 933 characters in the LOTR Universe, and not every character has a quote! API usage is limited to 100 calls every 10 minutes!</p>
        <div class="col-3 d-flex">            
            <button class="btn btn-primary mt-auto" type="submit">Get Random Character Quote!</button>
        </div>
    </div>
}
<br/>

<h2>Quote Response from API</h2>
<hr />
<div class="row">
    <div class="col-3">
        @Html.LabelFor(model => model.Quote, htmlAttributes: new { @class = "control-label" })
        @Html.TextAreaFor(model => model.Quote, htmlAttributes: new { @class = "form-control", @style = "width: 50vw; height: 30vh;" })
    </div>   
</div>